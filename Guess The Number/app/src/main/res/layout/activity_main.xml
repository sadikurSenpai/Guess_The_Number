<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90A4AE"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="241dp"
        android:layout_height="119dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/custom_btn"
        android:text="Start The Game"

        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="24sp"
        android:fontFamily="@font/robotocondensedbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#812525" />

    <Button
        android:id="@+id/button2"
        android:layout_width="241dp"
        android:layout_height="119dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/custom_btn_one"
        android:textColor="#424242"
        android:text="How to play "
        android:textAlignment="center"
        android:textSize="24sp"
        android:fontFamily="@font/robotocondensedbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:rippleColor="#812525" />

    <Button
        android:id="@+id/button3"
        android:layout_width="241dp"
        android:layout_height="119dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/custom_btn_two"
        android:textColor="#424242"
        android:text="Developer's profile"
        android:textAlignment="center"
        android:textSize="24sp"
        android:fontFamily="@font/robotocondensedbold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#812525" />
</androidx.constraintlayout.widget.ConstraintLayout>